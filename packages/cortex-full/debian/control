Package: cortex-full
Architecture: all
Depends: ${misc:Depends},
 cortex-core,
 buildah,
 skopeo,
 qemu-utils,
 libvirt-clients,
 virtinst,
 fail2ban,
 auditd,
 audispd-plugins,
 prometheus-node-exporter,
 nginx-light,
 certbot,
 python3-certbot-nginx,
 postgresql-client,
 mariadb-client,
 redis-tools,
 build-essential,
 python3-dev
Recommends:
 firmware-misc-nonfree,
 firmware-linux-nonfree,
