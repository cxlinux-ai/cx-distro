# CX Linux GNOME Desktop Branding
# Applied system-wide via dconf
# Default: Light theme

[org/gnome/desktop/interface]
gtk-theme='Adwaita'
icon-theme='Adwaita'
cursor-theme='Adwaita'
color-scheme='prefer-light'
font-name='Cantarell 11'

[org/gnome/desktop/background]
picture-uri='file:///usr/share/backgrounds/cx/circuit-board.png'
picture-uri-dark='file:///usr/share/backgrounds/cx/minimal-dark.png'
picture-options='zoom'
primary-color='#7C3AED'

[org/gnome/desktop/screensaver]
picture-uri='file:///usr/share/backgrounds/cx/circuit-board.png'
primary-color='#7C3AED'

[org/gnome/shell]
welcome-dialog-last-shown-version='9999999999'
favorite-apps=['firefox-esr.desktop', 'org.gnome.Nautilus.desktop', 'org.gnome.Terminal.desktop', 'org.gnome.Settings.desktop', 'calamares-install-cx.desktop']
